{
  "name": "a-tu-nombre",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm-run-all build:*",
    "pretest": "npm run build:test",
    "test": "tap test/**/*.spec.js",
    "dev": "npm-run-all --parallel build serve:dev watch:*",
    "build": "npm-run-all build:*",
    "serve:dev": "http-server dist",
    "build:html": "src/scripts/buildHtml.js",
    "watch:html": "onchange '**/*.html' -e 'dist/**' -- npm run build:html",
    "build:js": "rollup -c",
    "watch:js": "npm run build:js -- -w",
    "build:sass": "node-sass src/sass/ -o dist/css/",
    "watch:sass": "npm run build:sass -- -w",
    "build:fonts": "cpr node_modules/font-awesome/fonts/ dist/fonts/ -d",
    "build:imgs": "cpr src/img dist/img -d",
    "build:data": "cpr src/data dist/data -d",
    "watch:imgs": "onchange \"src/img\" -w -- npm run build:imgs",
    "watch": "npm-run-all --parallel watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datauy/a-tu-nombre.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/datauy/a-tu-nombre/issues"
  },
  "homepage": "https://github.com/n370/a-tu-nombre#readme",
  "dependencies": {
    "bulma": "^0.6.0",
    "d3": "^4.11.0",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.4",
    "rollerskate": "^1.1.0",
    "leaflet": "^1.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-env": "^1.2.2",
    "cpr": "^2.0.2",
    "http-server": "^0.9.0",
    "jquery": "^3.1.1",
    "jsdom": "^9.12.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "preprocess": "^3.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "tap": "^10.3.0"
  },
  "prettier": {
      "useTabs": false,
      "printWidth": 100,
      "tabWidth": 4,
      "singleQuote": true,
      "trailingComma": "es5"
  }
}
